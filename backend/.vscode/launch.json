    "version": "0.2.0",
    "configurations": [
        {
            "name": "BlazorServer",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/FourthPharos.Host/bin/Debug/net7.0/FourthPharos.Host.dll",
            "args": [],
            "cwd": "${workspaceFolder}/FourthPharos.Host",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        }
    ]
}